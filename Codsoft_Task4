#Task4 : Rock-Paper-Scissor Game
#The program prompts the user to make a choice among Rock, Paper and Scissor
#The random choice generated by computer is compared with the user's choice and winner is determined
#import random module to generate random choices we predefined
import random

#function to define choices and generate random out of it
def get_computer_choice():
    choices = ['rock', 'paper', 'scissors']
    return random.choice(choices)

#Function for determining winner and conditions are determined
def determine_winner(user_choice, computer_choice):
    #Comparing user's choice and computer's random choice
    if user_choice == computer_choice:
        return "It's a tie!"
    elif (user_choice == 'rock' and computer_choice == 'scissors') or \
         (user_choice == 'scissors' and computer_choice == 'paper') or \
         (user_choice == 'paper' and computer_choice == 'rock'):
        return "You win!"
    else:
        return "You lose!"

#Function to take user's choice in the game and calculate results
def play_game():
    user_score = 0
    computer_score = 0

    while True:
        user_choice = input("Choose rock, paper, or scissors: ").lower()
        if user_choice not in ['rock', 'paper', 'scissors']:
            print("Invalid choice. Please try again.")
            continue

        #above functions are called and result is obtained
        computer_choice = get_computer_choice()
        print(f"Computer chose {computer_choice}.")
        result = determine_winner(user_choice, computer_choice)
        print(result)
        
        #Score Calculation
        if result == "You win!":
            user_score += 1
        elif result == "You lose!":
            computer_score += 1

        print(f"Scores -> You: {user_score}, Computer: {computer_score}")

        play_again = input("Do you want to play again? (yes/no): ").lower()
        if play_again != 'yes':
            break

play_game()
